    -- No index on bbb.aaa_id produces an error
    create table public.aaa(
        id int primary key
    );
    create table public.bbb(
        id int primary key,
        aaa_id int references public.aaa(id) -- no index
    );
    select * from lint."0001_unindexed_foreign_keys";
